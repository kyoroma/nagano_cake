<%= render partial: 'public/shared/header' %>

<div class="container mt-4 ml-5">
  <div class="container">
    <h3><strong>商品一覧</strong><span style="font-size: 0.95rem; margin-left: 10px;">(全<%= @items.count %>件)</span></h3>
    <div class="row mt-3">
      <% @items.each do |item| %>
        <div class="col-md-3">
          <%= link_to item_path(item) do %>
            <% if item.image.attached? %>
              <%= image_tag item.image, class: "img-fluid" %>
            <% else %>
              <%= image_tag "default_image.jpg", class: "img-fluid" %>
            <% end %>
          <% end %>
          <p class="mt-2"><strong><%= item.name %></strong></p>
          <p>¥<%= item.price.to_i.to_s(:delimited) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="text-center">
  <%= paginate @items %>
</div>
