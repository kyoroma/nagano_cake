<%= render partial: 'public/shared/header' %>

<div class="container mt-5">
  <h1>商品一覧(<%= @items.count %>件)</h1>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <%= image_tag item.image, class: "img-fluid" %>
        <h3><%= item.name %></h3>
        <p>¥<%= item.price.to_i.to_s(:delimited) %></p>
        <%= link_to "詳細を見る", public_item_path(item), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center">
  <%= paginate @items %>
</div>
