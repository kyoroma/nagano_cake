<%= render partial: 'public/shared/header' %>

<div class="container mt-5">
  <div class="row mt-5">
    <div class="col-md-4 text-center">
      <%= image_tag @item.image, class: "img-fluid" %>
    </div>
    <div class="col-md-8">
      <h3><strong><%= @item.name %></strong></h3>
      <p><%= @item.introduction %></p>
      <p class="mt-5"><strong>¥<%= @item.with_tax_price %></strong><span style="font-size: 0.5rem;">（税込）</span></p>

      <%= form_with model: @cart_item, url: public_cart_items_path, method: :post do |f| %>
        <div class="form-row align-items-center">
          <div class="col-sm-4 mr-3">
            <%= f.select :amount, options_for_select((1..10).to_a), {}, class: "form-control", style: "width: 130px;" %>
            <%= f.hidden_field :item_id, value: @item.id %>
          </div>
          <div class="col-6 ml-2">
            <%= f.submit "カートに入れる", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
