<%= render partial: 'public/shared/header' %>

<h3 class="mt-3" style="display: inline-block;">注文履歴一覧</h3>
<div class="container">
  <table>
    <thead>
      <tr>
        <th>注文日時</th>
        <th>合計金額</th>
        <th>詳細</th>
      </tr>
    </thead>
    <tbody>
      <% if @orders.present? %>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.total_price %> 円</td>
            <td><%= link_to "詳細", public_order_path(order) %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="3">注文がありません。</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>