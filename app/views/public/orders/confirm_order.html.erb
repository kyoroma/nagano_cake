<%= render partial: 'public/shared/header' %>

<h1>注文情報確認</h1>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td> <!-- 小計を表示 -->
      </tr>
    <% end %>
  </tbody>
</table>

<p>送料: <%= @order.shipping_fee %></p>
<p>商品合計: <%= @order.total_price %></p>
<p>請求金額: <%= @order.total_price + @order.shipping_fee %></p>

<p>支払方法: <%= t("activerecord.attributes.order.payment_methods.#{@order.payment_method}") %></p>