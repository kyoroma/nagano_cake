<%= render partial: 'public/shared/header' %>

<h3 class="mt-3" style="display: inline-block;">注文詳細</h3>
<div class="container">
  <p><strong>注文日時:</strong> <%= @order.created_at %></p>
  <p><strong>注文者:</strong> <%= @order.customer.full_name %></p>
  <p><strong>合計金額:</strong> <%= @order.total_price %> 円</p>
  <p><strong>お届け先:</strong> <%= @order.name %>, <%= @order.postal_code %>, <%= @order.address %></p>
  <p><strong>支払方法:</strong> <%= @order.payment_method %></p>
  <p><strong>送料:</strong> <%= @order.shipping_fee %> 円</p>

  <h4>注文内容</h4>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>価格</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.item.price %> 円</td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.final_price %> 円</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>