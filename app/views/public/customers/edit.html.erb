<style>
  .span {
    color: #fff;
  }

  h3 {
    margin: 20px 0  0 60px;
    padding: 0 20px;
    background-color: #E5E8E8;
  }

</style>

  <%= render partial: 'public/shared/header' %>

<p id="notice"></p>
  <div class="container mx-auto">
    <h3 style="display: inline-block;">会員情報編集</h3>
    <%= form_with(model: @customer, url: customer_path, method: :patch, local: true) do |f| %>
      <div class="container mt-5">
        <div class="row">
          <div class="col-sm-3 col-xs-12">
            <%= f.label :last_name, "氏名", class: "mx-2" %>
          </div>
          <div class="col-sm-9 col-xs-12">
            <div class="form-inline">
              <%= f.text_field :last_name, class: "form-control form-control-sm mr-3" %>
              <%= f.text_field :first_name, class: "form-control form-control-sm" %>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row mt-2">
          <div class="col-sm-3 col-xs-12">
            <%= f.label :last_name_kana, "フリガナ", class: "mx-2" %>
          </div>
          <div class="col-sm-9 col-xs-12">
            <div class="form-inline align-items-center">
              <%= f.text_field :last_name_kana, class: "form-control form-control-sm mr-3" %>
              <%= f.text_field :first_name_kana, class: "form-control form-control-sm" %>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row mt-2">
          <div class="col-sm-3 col-xs-12">
            <%= f.label :postal_code, "郵便番号", class: "mx-2" %>
          </div>
          <div class="col-sm-7 col-xs-12", style="padding-left: 15px;">
            <%= f.text_field :postal_code, class: "form-control form-control-sm", style: "width: 174px;" %>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row mt-2">
          <div class="col-sm-3 col-xs-12">
            <%= f.label :address, "住所", class: "mx-2" %>
          </div>
          <div class="col-sm-8 col-xs-12", style="padding-left: 15px;">
            <%= f.text_field :address, class: "form-control form-control-sm" %>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row mt-2">
          <div class="col-sm-3 col-xs-12">
            <%= f.label :telephone_number, "電話番号", class: "mx-2" %>
          </div>
          <div class="col-sm-9 col-xs-12", style="padding-left: 15px;">
            <%= f.text_field :telephone_number, class: "form-control form-control-sm", style: "width: 174px;" %>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row mt-2">
          <div class="col-sm-3 col-xs-12">
            <%= f.label :email, "メールアドレス", class: "mx-2" %>
          </div>
          <div class="col-sm-8 col-xs-12", style="padding-left: 15px;">
            <%= f.email_field :email, class: "form-control form-control-sm", style: "width: 174px;" %>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row mt-3">
          <div class="col-sm-3 col-xs-12">
          </div>
          <div class="col-sm-9 col-xs-12 mb-5">
            <div class="form-inline align-items-center">
              <%= f.submit "編集内容を保存", class: "btn btn-success", style: "width: 230px"; %>
              <%= link_to "退会する", confirm_deactivation_customer_path, class: "btn btn-danger", style: "margin-left: 150px;" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
