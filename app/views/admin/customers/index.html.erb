<style>
  h3 {
    display: inline-block;
    white-space: nowrap;
    background-color: #E5E8E8;
    padding: 0 20px;
  }

  th {
    background-color: #E5E8E8;
  }
</style>

<%= render partial: 'admin/shared/header' %>

<div class="container">
  <h3 class="mt-4"><strong>会員一覧</strong></h3>
  <div class="container">
    <div class="col-10 ml-5">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer) %>
              </td>
              <td><%= customer.email %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
