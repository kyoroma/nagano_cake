<style>
  .container {
    min-height: 100%;
  }
  
  h3 {
    padding: 0 20px;
    background-color: #E5E8E8;
  }
  
  th {
    background-color: #E5E8E8;
  }
</style>

<%= render partial: 'admin/shared/header' %>

<div class="container mx-auto">
  <h3 class="mt-3", style="display: inline-block;">注文履歴一覧</h3>
    <div class="container">
      <div class="row">
      <table>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% if @orders.present? %>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.created_at %></td>
                <td><%= order.customer.full_name %></td>
                <td><%= order.order_items.count %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="3">注文がありません。</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    
      <% if @orders.present? %>
        <%= paginate @orders %>
      <% end %>
    </div>
  </div>
</div>