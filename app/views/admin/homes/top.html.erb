<style>
  h3 {
    padding: 0 20px;
    background-color: #E5E8E8;
  }

  th {
    background-color: #E5E8E8;
  }
</style>

<%= render partial: 'admin/shared/header' %>

<div class="container">
  <% if @orders.present? %>
    <h3 class="mt-3 ml-3" style="display: inline-block; white-space: nowrap;">注文履歴一覧</h3>
    <div class="container">
      <table>
        <thead>
          <tr>
            <th class="col-5">購入日時</th>
            <th class="col-3">購入者</th>
            <th class="col-3">注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="col-5"><%= link_to order.created_at.strftime('%Y-%m-%d %H:%M:%S'), admin_order_path(order) %></td>
              <td class="col-3"><%= order.customer.full_name %></td>
              <td class="col-3"><%= order.order_items.sum(&:amount) %></td> <!-- 注文個数を表示 -->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @orders %>
  <% else %>
    <p>注文がありません。</p>
  <% end %>
</div>