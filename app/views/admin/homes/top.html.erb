<style>
  h3 {
    padding: 0 20px;
    background-color: #E5E8E8;
  }

  th {
    background-color: #E5E8E8;
  }
</style>

<%= render partial: 'admin/shared/header' %>

<% if @orders.present? %>
  <h3 class="mt-3" style="display: inline-block;">注文履歴一覧</h3>
  <div class="container">
    <table>
      <thead>
        <tr>
          <th>注文日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.customer.full_name %></td>
            <td><%= order.order_items.sum(&:amount) %></td> <!-- 注文個数を表示 -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>注文がありません。</p>
<% end %>